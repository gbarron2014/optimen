<%- include('partials/_header') %>
<div class="container mt-2 ">
    <section class="row">
        <aside class="col-12 col-sm-12 col-md-2 col-lg-4 col-xl-4 justify-content-center">
            <!--Borrar a partir de aqui-->
            <div class="card mb-2 " style="height: 100%;">
                <div class="card-body ">
                    <div class="justify-content-center" style="margin: top;">
                        <img src="img/logo.png" class="img-fluid mx-auto d-block" width="200 pt" height="auto" alt="">
                        <a class="btn btn-info btn-block disabled" href="/">Iniciar sesión</a>
                        <a class="btn btn-info btn-block"
                            href='/registro'>Registrate</a>
                    </div>
                </div>
            </div>
            <!--Ultima linea de borrado-->
        </aside>
        <main class="col-12 col-sm-12 col-md-10 col-lg-8 col-xl-8">
            <!--Borrar a partir de aqui-->
            <div class="card mb-2">
                <div class="card-header">
                    <h3 class="text-center">Inicia sesión </h3>
                </div>
                <div class="card-body ">
                    <div class="row ">
                        <div class="col-12">
                            <div class="form-group">
                            </div>
                            <form action="/" method="POST">
                                <% if (message != '') { %>
                                    <div class="alert alert-danger" role="alert"><%= message %></div>
                                <% }%>
                                    
                                
                                <div class="form-group">
                                    <i class="fas fa-user fa-10x" style="margin: 0 0 0 35%"></i><br>
                                    <label for="User">Email:</label>
                                    <input type="text" name="username" id="User" class="form-control" autofocus>
                                   
                                </div>
                                <div class="form-group">
                                    <label for="Password">Contraseña:</label>
                                    <input type="password" name="password" id="Password" class="form-control">
                                    
                                </div>
                                <div>
                                    <button class="btn btn-success btn-block">Entrar</button>
                                    
                                </div>
                            </form>

                            
                        </div>
                    </div>
                    <!--Ultima linea de borrado-->
        </main>
    </section>
</div>
<%- include ('partials/_footer') %>