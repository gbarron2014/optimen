<style type="text/css">
    body {
      text-align: center; }
    </style>
<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center"> Control de Usuarios </h4>
                </div>
                <div class="card-body">
                    <table id="estadisticasLists" class="table table-bordered table-hover" table-responsive>
                        <thead>
                                                       <th>Nombre</th>
                            <th>Número de Trabajador</th>
                            <th>Más información</th>
                            <th>Correo Electrónico</th>
                            <th>Status</th>
                            <th>Decisiones</th>
                            <!--<th>Acciones</th>-->
                        </thead>
                        <tbody>
                            <% if(datos){ %>
                            <% for(var i=0;i< datos.length;i++){ %>
                            <tr>
                                <td align="center"> <%= datos[i].Nombre %> <%= datos[i].apePaterno %> <%= datos[i].apeMaterno %>  </td>
                                
                                

                                <td> <%= datos[i].numTrabajador %> </td>
                                <td><span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Rango, Puesto y Flota">
                                    <button class="btn btn-primary" style="pointer-events: none;" type="button" disabled><%= datos[i].Rango %>, <%= datos[i].Puesto %>, <%= datos[i].Flota %></button>
                                  </span></td>
                                  
                                  <td id="celda"><text id="status"> <%= datos[i].email %> </text></td>
                                  <td id="celda"><text id="status"> <%= datos[i].estado %> </text></td>

                                
                                  <td> 
                                  <a href="/admin/aceptar/<%= datos[i].numTrabajador %>" class="btn btn-primary" onclick="return confirm('¿Estas seguro de Aceptarlo? Recuerda mandarle correo al tripulante sobre tu decisión');">Aceptar</a>
                                  <a href="/admin/rechazar/<%= datos[i].numTrabajador %>" class="btn btn-danger" onclick="return confirm('¿Estas seguro de Rechazarlo? Recuerda mandarle correo al tripulante sobre tu decisión');">Rechazar</a>
                            
                              </td>
                                
                            </tr>
                            <% } %>
                            <% } %>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

